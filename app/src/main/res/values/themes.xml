<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cit0rusTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/pt_sans_caption</item>
    </style>

    <style name="CustomBottomBar" parent="@android:style/Widget.Button">
        <item name="color">@color/dark_blue_15</item>
        <item name="backgroundColor">@color/dark_blue_15</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/green_35</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="GlobalSwitchCompatTheme" >
        <item name="colorControlActivated">@color/white</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>

    </style>

</resources>